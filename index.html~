<script>
(function() {
		var game = new Phaser.Game( 800, 600, Phaser.AUTO, 'game');
    game.state.add('Boot', Valin.Boot);
    game.state.add('Preloader', Valin.Preloader);
    game.state.add('MainMenu', Valin.MainMenu);
    game.state.add('Game', Valin.Game);
    game.state.start('Boot');
    })();
</script>
